# ====================
# LOCAL DEVELOPMENT ENVIRONMENT VARIABLES
# ====================
# Copy this file to .env and fill in your actual values

# Django Settings
SECRET_KEY=django-insecure-local-development-key-replace-me-12345
DEBUG=True

# Database (SQLite for local development)
DATABASE_URL=sqlite:///db.sqlite3

# Gemini AI API Key (for questionnaire feature)
# Get your key from: https://makersuite.google.com/app/apikey
GEMINI_API_KEY=your-gemini-api-key-here

# AWS S3 Configuration
# Get credentials from AWS IAM Console
AWS_ACCESS_KEY_ID=your-aws-access-key-id
AWS_SECRET_ACCESS_KEY=your-aws-secret-access-key
AWS_STORAGE_BUCKET_NAME=your-s3-bucket-name
AWS_S3_REGION_NAME=us-east-1

# Email Configuration (OPTIONAL - OTP verification currently disabled)
# OTP email verification is disabled, so email config is not required for local dev
EMAIL_BACKEND=django.core.mail.backends.console.EmailBackend
DEFAULT_FROM_EMAIL=noreply@vikingroots.local
